#### Start of system configuration section. ####

srcdir = @srcdir@
VPATH = @srcdir@

CC = @CC@

INSTALL = @INSTALL@
INSTALL_PROGRAM = @INSTALL_PROGRAM@
INSTALL_DATA = @INSTALL_DATA@

GZIP = @GZIP@
PIDFILE = @PIDFILE@

CFLAGS = @CFLAGS@ -Wall
DEFS = -DGZIP=\"${GZIP}\" -DPIDFILE=\"${PIDFILE}\"
LDFLAGS = @LDFLAGS@
LIBS = @LIBS@

prefix = @prefix@
exec_prefix = @exec_prefix@
bindir = @bindir@
sysconfdir = @sysconfdir@

# Where to install the manual page
mandir = @mandir@/man1
# Extension (not including `.') for the installed manual page filenames
manext = 1

#### End of system configuration section. ####

SHELL = /bin/sh

# This rule allows us to supply the necessary -D options
# in addition to whatever the user asks for.
.c.o:
	${CC} -I${srcdir} ${CPPFLAGS} ${CFLAGS} ${DEFS} -c $<

OBJ = logrot.o stringlist.o @LIBOBJS@

all: logrot logrot.1

distall: ${srcdir}/configure ${srcdir}/config.h

logrot: ${OBJ}
	${CC} ${LDFLAGS} -o logrot ${OBJ} ${LIBS}

logrot.1:	logrot.1.in Makefile
	@rm -f logrot.1
	sed -e 's%!PIDFILE!%'${PIDFILE}'%' -e 's%!GZIP!%'${GZIP}'%' \
	    < logrot.1.in > logrot.1

${OBJ}: ${srcdir}/logrot.h config.h 

install: all ${srcdir}/logrot.1 installdirs
	${INSTALL_PROGRAM} logrot ${bindir}/${binprefix}logrot
	${INSTALL_DATA} ${srcdir}/logrot.1 ${mandir}/${manprefix}logrot.${manext}

installdirs: mkinstalldirs
	${srcdir}/mkinstalldirs ${bindir} ${mandir}

uninstall:
	rm -f ${bindir}/${binprefix}logrot
	rm -f ${mandir}/${manprefix}logrot.${manext}

TAGS:
	cd ${srcdir} && etags *.c *.h

clean:
	rm -f *.o core logrot logrot.1

mostlyclean cleandir: clean

distclean: clean
	rm -f Makefile config.status config.log config.cache config.h
	rm -f stamp-h stamp-h.in

realclean: distclean
	rm -f TAGS

cvsclean: realclean
	rm -f configure config.h.in
